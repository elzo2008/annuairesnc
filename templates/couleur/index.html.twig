{% extends 'base.html.twig' %}

{% block title %}Couleur index{% endblock %}

{% block content %}
    <h1>Couleur index</h1>

    <table class="table table-bordered table-hover">
        <thead class="thead-light table-hover">
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for couleur in couleurs %}
            <tr>
                <td>{{ couleur.id }}</td>
                <td>{{ couleur.description }}</td>
                <td>
                    <a href="{{ path('app_couleur_show', {'id': couleur.id}) }}">show</a>
                    <a href="{{ path('app_couleur_edit', {'id': couleur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_couleur_new') }}">Nouvelle couleur</a>
{% endblock %}
